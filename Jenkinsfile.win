pipeline {
    agent {
		label 'jenkinsagent'
	}
    stages {
        stage('Hello') {
            steps {
                script {
					echo "Hello from $BRANCH_NAME branch!"
                    if ($BRANCH_NAME == 'main') {
                        echo "Hello from main branch. Workspace = $WORKSPACE"
                    }  else {
                        echo "Hello from $BRANCH_NAME branch!"
                    }
                    }
            }
        }
    }
}