pipeline {
    agent {
		label 'jenkinsagent'
	}
    stages {
        stage('Hello') {
            steps {
                script {
					echo "Hello from $env.BRANCH_NAME branch!"
                    if ($env.BRANCH_NAME == 'main') {
                        echo "Hello from main branch. Workspace = $env.WORKSPACE"
                    }  else {
                        echo "Hello from $env.BRANCH_NAME branch!"
                    }
                    }
            }
        }
    }
}