pipeline {
    agent {
		label 'jenkinsagent'
	}
    stages {
        stage('Hello') {
            steps {
                script {
                    if (env.BRANCH_NAME == 'main') {
                        echo 'Hello from main branch. Workspace = ${env.WORKSPACE}'
                    }  else {
                        sh "echo 'Hello from ${env.BRANCH_NAME} branch!'"
                    }
                    }
            }
        }
    }
}